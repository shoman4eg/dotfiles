#!/bin/bash

## Files and cmd
FILE="$HOME/.cache/ewwdashboard.lock"
EWW_BIN="$HOME/.local/bin/eww"

## Run eww daemon if not running already
if [[ ! `pidof eww` ]]; then
	${EWW_BIN} daemon
	sleep 1
fi

## Open widgets
run_eww() {
	${EWW_BIN} -c $HOME/.config/eww/dashboard open-many \
		sidebar
}

close_eww() {
	${EWW_BIN} -c $HOME/.config/eww/dashboard close \
		sidebar
}

toggle() {
	if [[ ! -f "$FILE" ]]; then
		touch "$FILE"
		run_eww
	else
		close_eww
		rm "$FILE"
	fi
}

case "$1" in
	--open) run_eww;;
	--close) close_eww;;
    *) toggle ;;
esac

## Launch or close widgets accordingly
